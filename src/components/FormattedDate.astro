---
interface Props {
  date: Date;
  class?: string;
}

const { date, class: className = '' } = Astro.props;
const formatter = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<time datetime={date.toISOString()} class={className}>
  {formatter.format(date)}
</time>
